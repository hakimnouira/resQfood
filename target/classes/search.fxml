<AnchorPane prefHeight="456.0" prefWidth="715.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SearchController">
   <children>
      <VBox alignment="CENTER" layoutY="56.0" spacing="10">

         <!-- Title -->
         <HBox spacing="10">
            <Label text="Title:" />
            <TextField fx:id="titleField" />
         </HBox>

         <!-- Content -->
         <HBox spacing="10">
            <Label text="Content:" />
            <TextField fx:id="contentField" />
         </HBox>

         <!-- Number of Comments -->
         <HBox spacing="10">
            <Label text="Number of Comments:" />
            <TextField fx:id="commentsField" />
         </HBox>

         <!-- Number of Likes -->
         <HBox spacing="10">
            <Label text="Number of Likes:" />
            <TextField fx:id="likesField" />
         </HBox>

         <!-- Date Interval -->
         <HBox spacing="10">
            <Label text="Date Interval:" />
            <DatePicker fx:id="startDatePicker" />
            <Label text="to" />
            <DatePicker fx:id="endDatePicker" />
         </HBox>

         <!-- Updated Interval -->
         <HBox spacing="10">
            <Label text="Updated Interval:" />
            <DatePicker fx:id="startUpdatePicker" />
            <Label text="to" />
            <DatePicker fx:id="endUpdatePicker" />
         </HBox>

         <!-- Most Commented/Liked -->
         <HBox spacing="10">
            <Label text="Most Commented/Liked:" />
            <ChoiceBox fx:id="mostChoiceBox">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Most Commented" />
                     <String fx:value="Most Liked" />
                  </FXCollections>
               </items>
            </ChoiceBox>
         </HBox>

         <!-- Search Button -->
         <Button text="Search" />
      </VBox>
      <!-- Search Criteria -->
      <Label layoutX="166.0" layoutY="29.0" style="-fx-font-weight: bold;" text="Search Criteria" />
      <TitledPane fx:id="wa" animated="false" layoutX="498.0" layoutY="29.0" text="untitled">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </TitledPane>
    
      <Accordion fx:id="yyy" layoutX="530.0" layoutY="297.0">
        <panes>
          <TitledPane animated="false" text="untitled 1" />
          <TitledPane animated="false" text="untitled 2" />
        </panes>
      </Accordion>
