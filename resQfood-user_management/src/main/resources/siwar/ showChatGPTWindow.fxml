<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.siwar.AddDonationController">

    <children>
        <!-- TextArea for user input -->
        <TextArea fx:id="userInputArea" promptText="Type your message here..." VBox.vgrow="ALWAYS" />

        <!-- TextArea for displaying ChatGPT responses -->
        <TextArea fx:id="chatDisplayArea" editable="false" VBox.vgrow="ALWAYS" />

        <!-- Button to close the window -->
        <Button onAction="#closeChatWindow" text="Close" />
    </children>
</VBox>
