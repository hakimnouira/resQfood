<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="473.0" prefWidth="791.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.fatma.ShoweventController">
   <children>

       <fx:include source="Dashboard.fxml" />

      <TableView fx:id="eventtable" layoutX="270.0" layoutY="181.0" prefHeight="389.0" prefWidth="692.0">
        <columns>
          <TableColumn fx:id="namecol" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="datecol" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="timecol" prefWidth="75.0" text="Time" />
            <TableColumn fx:id="locatcol" prefWidth="75.0" text="Location" />
            <TableColumn fx:id="capacitycol" prefWidth="75.0" text="Capacity" />
            <TableColumn fx:id="statuscol" prefWidth="75.0" text="Status" />
            <TableColumn fx:id="desccol" prefWidth="75.0" text="Description" />
            <TableColumn fx:id="userjcol" prefWidth="75.0" text="users_joined" />
        </columns>
      </TableView>
      <Button layoutX="995.0" layoutY="275.0" mnemonicParsing="false" onAction="#navigate" text="add an event" textFill="#df0f0f">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button layoutX="1001.0" layoutY="312.0" mnemonicParsing="false" onAction="#update" prefHeight="26.0" prefWidth="77.0" text="update ">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button layoutX="1000.0" layoutY="349.0" mnemonicParsing="false" onAction="#deleteevent" prefHeight="26.0" prefWidth="78.0" text="delete" textFill="#3e80b9">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
      <Label layoutX="256.0" layoutY="62.0" text="EVENTS LIST" textFill="#3d6656">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Button layoutX="879.0" layoutY="578.0" mnemonicParsing="false" onAction="#particip" text="view participations" />
       <!-- Date Picker for selecting date -->
       <DatePicker fx:id="datePicker" layoutX="616.0" layoutY="80.0" promptText="Select Date" />

       <!-- Text Field for entering name -->
       <TextField fx:id="nameField" layoutX="845.0" layoutY="80.0" promptText="Enter Name" />

       <!-- Button for searching by date -->
       <Button layoutX="499.0" layoutY="80.0" mnemonicParsing="false" onAction="#searchByDate" text="Search by Date" />

       <!-- Button for searching by name -->
       <Button layoutX="1005.0" layoutY="80.0" mnemonicParsing="false" onAction="#searchByName" text="Search by Name" />
   </children>
</AnchorPane>
