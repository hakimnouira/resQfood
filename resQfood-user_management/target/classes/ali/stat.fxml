<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ali.Stat">
   <children>
      <AreaChart fx:id="areaChart" layoutX="162.0" prefHeight="400.0" prefWidth="437.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </AreaChart>
      <DatePicker fx:id="startDatePicker" layoutX="47.0" layoutY="56.0" prefHeight="26.0" prefWidth="94.0" />
      <DatePicker fx:id="endDatePicker" layoutX="47.0" layoutY="98.0" prefHeight="26.0" prefWidth="94.0" />
      <Label layoutX="14.0" layoutY="60.0" prefHeight="18.0" prefWidth="35.0" text="Start" />
      <Label layoutX="22.0" layoutY="103.0" text="End" />
      <ChoiceBox fx:id="productChoice" layoutX="23.0" layoutY="200.0" prefWidth="150.0" />
      <Button fx:id="generateStatButton" layoutX="11.0" layoutY="155.0" mnemonicParsing="false" onAction="#generateStat" text="AreaChart: Quantity Evolution" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goToList" text="Products List" />
      <Button layoutX="8.0" layoutY="308.0" mnemonicParsing="false" onAction="#exportHistoryToExcel" prefHeight="26.0" prefWidth="112.0" text="Download Excel" />
      <Button layoutX="22.0" layoutY="344.0" mnemonicParsing="false" onAction="#uploadExcel" text="Upload Excel" />
   </children>
</AnchorPane>
