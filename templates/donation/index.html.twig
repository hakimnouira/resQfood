{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>
    <a href="{{ path('app_donation_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>DonationId</th>
                <th>DonationCategory</th>
                <th>DonationAmount</th>
                <th>FoodName</th>
                <th>FoodQuantity</th>
                <th>DcategoryId</th>
                <th>UdonorId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.donationId }}</td>
                <td>{{ donation.donationCategory }}</td>
                <td>{{ donation.donationAmount }}</td>
                <td>{{ donation.foodName }}</td>
                <td>{{ donation.foodQuantity }}</td>
                <td>{{ donation.dcategoryId }}</td>
                <td>{{ donation.udonorId }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'donationId': donation.donationId}) }}">show</a>
                    <a href="{{ path('app_donation_edit', {'donationId': donation.donationId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
